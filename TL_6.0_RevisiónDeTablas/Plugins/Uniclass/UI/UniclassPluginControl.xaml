<!-- Plugins/Uniclass/UI/UniclassPluginControl.xaml -->
<UserControl x:Class="TL60_AuditoriaUnificada.Plugins.Uniclass.UI.UniclassPluginControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             Background="#F5F5F5">

    <UserControl.Resources>
        <Style x:Key="DiagnosticRowStyle" TargetType="DataGridRow">
            <Setter Property="Background" Value="{Binding BackgroundColor}"/>
            <Style.Triggers>
                <DataTrigger Binding="{Binding Estado}" Value="Error">
                    <Setter Property="Foreground" Value="#721C24"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Estado}" Value="Corregir">
                    <Setter Property="Foreground" Value="#0C5460"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Estado}" Value="Advertencia">
                    <Setter Property="Foreground" Value="#856404"/>
                </DataTrigger>
                <DataTrigger Binding="{Binding Estado}" Value="Correcto">
                    <Setter Property="Foreground" Value="#155724"/>
                </DataTrigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="ShowButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#F0F0F0"/>
            <Setter Property="Foreground" Value="#666666"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="Padding" Value="8,4"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="16"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}" CornerRadius="3" Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#D0D0D0"/>
                </Trigger>
                <Trigger Property="IsEnabled" Value="False">
                    <Setter Property="Background" Value="#F8F8F8"/>
                    <Setter Property="Foreground" Value="#CCCCCC"/>
                    <Setter Property="Cursor" Value="No"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="LegendButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#BDC3C7"/>
            <Setter Property="BorderBrush" Value="#95A5A6"/>
            <Setter Property="BorderThickness" Value="1"/>
            <Setter Property="Padding" Value="15,8"/>
            <Setter Property="Margin" Value="0"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="FontSize" Value="12"/>
            <Setter Property="FontWeight" Value="SemiBold"/>
            <Setter Property="FocusVisualStyle" Value="{x:Null}"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border Background="{TemplateBinding Background}"
                                 BorderBrush="{TemplateBinding BorderBrush}"
                                 BorderThickness="{TemplateBinding BorderThickness}"
                                 CornerRadius="3"
                                 Padding="{TemplateBinding Padding}">
                            <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
            <Style.Triggers>
                <Trigger Property="IsMouseOver" Value="True">
                    <Setter Property="Background" Value="#FFFFFF"/>
                </Trigger>
            </Style.Triggers>
        </Style>

        <Style x:Key="CenteredHeaderStyle" TargetType="DataGridColumnHeader">
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="FontWeight" Value="Bold"/>
        </Style>

        <Style x:Key="RoundedCheckBoxStyle" TargetType="CheckBox">
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="CheckBox">
                        <Border Background="White"
                                BorderBrush="#BDC3C7"
                                BorderThickness="1"
                                CornerRadius="3"
                                Width="18"
                                Height="18"
                                HorizontalAlignment="Center"
                                VerticalAlignment="Center">
                            <Path x:Name="CheckMark"
                                  Data="M 0,4 L 3,7 L 8,0"
                                  Stroke="#28A745"
                                  StrokeThickness="2"
                                  Visibility="Collapsed"
                                  HorizontalAlignment="Center"
                                  VerticalAlignment="Center"
                                  Margin="0,-1,0,0"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsChecked" Value="True">
                                <Setter TargetName="CheckMark" Property="Visibility" Value="Visible"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>

    </UserControl.Resources>

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <TextBlock Grid.Row="0" Text="AuditorÃ­a de ParÃ¡metros Uniclass" FontSize="24" FontWeight="Bold" Foreground="#2C3E50" HorizontalAlignment="Center" Margin="0,0,0,20"/>

        <StackPanel Grid.Row="1" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,0,0,10">
            <Button Style="{StaticResource LegendButtonStyle}" Click="FilterButton_Click" Tag="Total">
                <TextBlock x:Name="TotalTextBlock" Text="Total: 0" Foreground="#34495E"/>
            </Button>
            <Button Style="{StaticResource LegendButtonStyle}" Click="FilterButton_Click" Tag="Corregir">
                <TextBlock x:Name="CorregirTextBlock" Text="ðŸ”§ Corregir: 0" Foreground="#0C5460"/>
            </Button>
            <Button Style="{StaticResource LegendButtonStyle}" Click="FilterButton_Click" Tag="Advertencia">
                <TextBlock x:Name="AdvertenciaTextBlock" Text="âš  Advertencias: 0" Foreground="#856404"/>
            </Button>
            <Button Style="{StaticResource LegendButtonStyle}" Click="FilterButton_Click" Tag="Error">
                <TextBlock x:Name="ErrorTextBlock" Text="âŒ Errores: 0" Foreground="#721C24"/>
            </Button>
            <Button Style="{StaticResource LegendButtonStyle}" Click="FilterButton_Click" Tag="Correcto">
                <TextBlock x:Name="CorrectoTextBlock" Text="âœ“ Correctos: 0" Foreground="#155724"/>
            </Button>
        </StackPanel>

        <Border Grid.Row="2" Background="White" BorderBrush="#BDC3C7" BorderThickness="1" CornerRadius="5">
            <DataGrid x:Name="DiagnosticDataGrid" AutoGenerateColumns="False" CanUserAddRows="False" CanUserDeleteRows="False"
                      SelectionMode="Extended" SelectionUnit="FullRow" GridLinesVisibility="Horizontal" HeadersVisibility="Column"
                      RowStyle="{StaticResource DiagnosticRowStyle}" RowHeight="35" FontSize="12"
                      ScrollViewer.HorizontalScrollBarVisibility="Auto" ScrollViewer.VerticalScrollBarVisibility="Auto">
                <DataGrid.Columns>
                    <!-- Columna de Checkbox -->
                    <DataGridTemplateColumn Width="40" HeaderStyle="{StaticResource CenteredHeaderStyle}">
                        <DataGridTemplateColumn.HeaderTemplate>
                            <DataTemplate>
                                <CheckBox Style="{StaticResource RoundedCheckBoxStyle}" x:Name="HeaderCheckBox"
                                          Checked="HeaderCheckBox_Checked" Unchecked="HeaderCheckBox_Unchecked"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.HeaderTemplate>
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <CheckBox Style="{StaticResource RoundedCheckBoxStyle}"
                                          IsChecked="{Binding IsChecked, Mode=TwoWay, UpdateSourceTrigger=PropertyChanged}"
                                          Checked="RowCheckBox_Checked" Unchecked="RowCheckBox_Unchecked"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTemplateColumn Header="ABRIR" Width="50" HeaderStyle="{StaticResource CenteredHeaderStyle}">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="ðŸ‘ï¸" Style="{StaticResource ShowButtonStyle}" IsEnabled="{Binding EsSeleccionable}" Click="MostrarButton_Click" Tag="{Binding}"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                    <DataGridTextColumn Header="#" Binding="{Binding NumeroFila}" Width="50" IsReadOnly="True" HeaderStyle="{StaticResource CenteredHeaderStyle}">
                        <DataGridTextColumn.ElementStyle>
                            <Style TargetType="TextBlock">
                                <Setter Property="HorizontalAlignment" Value="Center"/>
                                <Setter Property="FontWeight" Value="SemiBold"/>
                            </Style>
                        </DataGridTextColumn.ElementStyle>
                    </DataGridTextColumn>
                    <DataGridTextColumn Header="ID" Binding="{Binding IdMostrar}" Width="80" HeaderStyle="{StaticResource CenteredHeaderStyle}"/>
                    <DataGridTextColumn Header="GRUPO" Binding="{Binding GrupoCOBie}" Width="100" HeaderStyle="{StaticResource CenteredHeaderStyle}"/>
                    <DataGridTextColumn Header="ASSEMBLY CODE" Binding="{Binding AssemblyCode}" Width="120" HeaderStyle="{StaticResource CenteredHeaderStyle}"/>
                    <DataGridTextColumn Header="DESCRIPCIÃ“N" Binding="{Binding Descripcion}" Width="200" HeaderStyle="{StaticResource CenteredHeaderStyle}"/>
                    <DataGridTextColumn Header="PARÃMETRO" Binding="{Binding NombreParametro}" Width="350" HeaderStyle="{StaticResource CenteredHeaderStyle}"/>
                    <DataGridTextColumn Header="VALOR ACTUAL" Binding="{Binding ValorActual}" Width="250" HeaderStyle="{StaticResource CenteredHeaderStyle}"/>
                    <DataGridTextColumn Header="VALOR CORRECTO" Binding="{Binding ValorCorregido}" Width="250" HeaderStyle="{StaticResource CenteredHeaderStyle}"/>
                    <DataGridTextColumn Header="MENSAJE" Binding="{Binding Mensaje}" Width="*" HeaderStyle="{StaticResource CenteredHeaderStyle}"/>
                </DataGrid.Columns>
            </DataGrid>
        </Border>

        <StackPanel Grid.Row="3" Orientation="Horizontal" HorizontalAlignment="Center" Margin="0,15,0,0">
            <Button x:Name="ExportarButton" Content="Exportar a Excel" Width="150" Height="40" Margin="10,0" FontSize="14" FontWeight="SemiBold"
                    Background="#4E529C" Foreground="White" BorderThickness="0" Cursor="Hand" Click="ExportarButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="5" Padding="10">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#3D4078"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
            <Button x:Name="CorregirButton" Content="Corregir" Width="120" Height="40" Margin="10,0" FontSize="14" FontWeight="SemiBold"
                    Background="#28A745" Foreground="White" BorderThickness="0" Cursor="Hand" Click="CorregirButton_Click">
                <Button.Style>
                    <Style TargetType="Button">
                        <Setter Property="Template">
                            <Setter.Value>
                                <ControlTemplate TargetType="Button">
                                    <Border Background="{TemplateBinding Background}" CornerRadius="5" Padding="10">
                                        <ContentPresenter HorizontalAlignment="Center" VerticalAlignment="Center"/>
                                    </Border>
                                </ControlTemplate>
                            </Setter.Value>
                        </Setter>
                        <Style.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter Property="Background" Value="#218838"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter Property="Background" Value="#BDC3C7"/>
                                <Setter Property="Opacity" Value="0.7"/>
                                <Setter Property="Cursor" Value="No"/>
                            </Trigger>
                        </Style.Triggers>
                    </Style>
                </Button.Style>
            </Button>
        </StackPanel>
    </Grid>
</UserControl>
